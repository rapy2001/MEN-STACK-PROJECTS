<div>
    <div>
        <img src = "{{photo.url}}" alt = "error"/>
        <h3>{{title}}</h3>
        <h4><a href = "/user/{{photo.userDetails.user_id}}/public">By {{photo.userDetails.username}}</a></h4>
        <p>
            {{photo.description}}
        </p>
        <h4>views: {{photo.views}}</h4>
        <h4>likes: {{photo.likes}}</h4>
        {{#if photo.follow}}
            <a href = "/user/{{photo.userDetails.user_id}}/follow">Follow</a>
        {{/if}}
        {{#if photo.like}}
            <a href = "/photo/{{photo.id}}/like">Like Photo</a>
        {{/if}}
        <a href = "/photo/{{photo.id}}/collection">Add to Collection</a>
        <div>
            <h3>Comments</h3>
            <a href = "/photo/{{photo.id}}/comment">Add a Comment</a>
            {{#if photo.comments}}
                <div>
                    <h4>No Comments yet ...</h4>
                </div>
            {{else}} 
                {{#each photo.comments}}
                    <div>
                        <h4>{{comment}}</h4>
                        <h5>By: {{userDetails.username}}</h5>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>